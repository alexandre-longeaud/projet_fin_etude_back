{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}

<div class="container col-8">

{% for message in app.flashes('warning review') %}
<div class="alert alert-danger col-6 mt-4" role="alert">
     {{ message }}
</div>
{% endfor %}

	<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Pseudo</th>
      <th scope="col">commentaire</th>
      <th scope="col">Date</th>
      <th scope="col">actions</th>

    </tr>
  </thead>
  <tbody>
        {% for review in reviews %}
    <tr>

      <td>{{ review.id }}</td>
      <td>{{ review.user.pseudo }}</td>
      <td>{{ review.content }}</td>
      <td>{{ review.createdAt|date('Y-m-d') }}</td>

      <td>  
        <a class="btn btn-success" href="{{ path('app_back_show_review', {'id': review.id}) }}"><i class="bi bi-eye"></i></a>
        <a class="btn btn-danger" href="{{ path('app_back_delete_review', {'id': review.id}) }}"><i class="bi bi-person-x"></i></a>
    </td>
    </tr>
        {% endfor %}

  </tbody>
</table>
</div>
{% endblock %}
