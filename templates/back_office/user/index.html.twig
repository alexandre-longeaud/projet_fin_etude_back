{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>
<a class="btn btn-primary" href="{{ path('app_back_office_user_new') }}">Cr√©er un utilisateur</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Pseudo</th>
                <th>Bio</th>
                <th>Avatar</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.bio|slice(0,40)}}...</td>
                
                <td>{{ user.avatar|slice(0,40) }}</td>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_back_office_user_show', {'id': user.id}) }}"><i class="bi bi-eye"></i></a></a>
                    <a class="btn btn-warning" href="{{ path('app_back_office_user_edit', {'id': user.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
