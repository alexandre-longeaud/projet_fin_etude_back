{% extends 'base.html.twig' %}

{% block title %}Images{% endblock %}

{% block body %}

<div class="container col-8">
{% for message in app.flashes('warning picture') %}
<div class="alert alert-danger col-6 mt-4" role="alert">
     {{ message }}
</div>
{% endfor %}

	<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Pseudo</th>
      <th scope="col">image</th>
      <th scope="col">Prompt</th>
      <th scope="col">Ia</th>
      <th scope="col">Date</th>
      <th scope="col">actions</th>

    </tr>
  </thead>
  <tbody>
        {% for picture in pictures %}
    <tr>

      <td>{{ picture.id }}</td>
      <td>{{ picture.user.pseudo }}</td>
      <td>
            <img src="{{ picture.fileName }}" alt="Picture {{ picture.id }}" style="max-width: 200px; max-height: 200px;">
      </td>
      <td>{{ picture.prompt }}</td>
      <td>{{ picture.ia }}</td>


      <td>{{ picture.createdAt|date('Y-m-d') }}</td>

      <td>  
        <a class="btn btn-success" href="{{ path('app_back_show_picture', {'id': picture.id}) }}"><i class="bi bi-eye"></i></a>
        <a class="btn btn-danger" href="{{ path('app_back_delete_picture', {'id': picture.id}) }}"><i class="bi bi-person-x"></i></a>
    </td>
    </tr>
        {% endfor %}

  </tbody>
</table>




{% endblock %}
