{% extends 'base.html.twig' %}

{% block title %}User list{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ user.bio }}</td>
            </tr>
            <tr>
                <th>Avatar</th>
                <td>
                    {% if user.avatar %}
                        <img src="{{ user.avatar }}" alt="Avatar" style="max-width: 200px; max-height: 200px;">
                    {% else %}
                        No avatar
                    {% endif %}
                </td>            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for picture in user.pictures %}
                        <img src="{{ picture.fileName }}" alt="Picture {{ picture.id }}" style="max-width: 200px; max-height: 200px;">
                    {% endfor %}
                </td>            
                </tr>            
        </tbody>
    </table>

    <a href="{{ path('app_back_user_list') }}">back to list</a>

    <a href="{{ path('app_back_user_edit', {'id': user.id}) }}">edit</a>

{% endblock %}
